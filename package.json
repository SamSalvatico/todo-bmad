{
  "name": "todo-bmad",
  "version": "0.1.0",
  "private": true,
  "description": "Full-stack Todo application with React + Fastify + SQLite",
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "pnpm --recursive test",
    "test:e2e": "pnpm --filter frontend test:e2e"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "concurrently": "^9.2.1"
  }
}